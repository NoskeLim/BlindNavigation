<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".test.activity.TestDirectionActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 위치"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/startLatEditTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:hint="위도" />
    <EditText
        android:id="@+id/startLngEditTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:hint="경도"  />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음 위치"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/endLatEditTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:hint="위도" />

    <EditText
        android:id="@+id/endLngEditTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:hint="경도"  />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="방향"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/directionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="아직 계산되지 않음"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/degreeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="아직 계산되지 않음"
        android:textSize="25sp" />

    <Button
        android:id="@+id/calcDegreeBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="방향 계산" />

</LinearLayout>