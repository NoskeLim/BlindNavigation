<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.guide.NavigationActivity">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:text="@string/moving" />

    <ImageView
        android:layout_width="412dp"
        android:layout_height="390dp"
        android:gravity="center_horizontal"
        android:src="@drawable/capstone_icon" />

    <Button
        android:id="@+id/nearLocationNameBT"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_button"
        android:backgroundTint="@color/yellow"
        android:textColor="#000000"
        android:textSize="50sp"
        android:text="@string/nearLocation"/>

    <Button
        android:id="@+id/stopGuideBT"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_button"
        android:backgroundTint="@color/yellow"
        android:textColor="#000000"
        android:textSize="50sp"
        android:text="@string/cancelGuide" />

</LinearLayout>