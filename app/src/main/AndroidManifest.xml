<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BlindNavigationApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlindNavigation"
        tools:targetApi="31">
        <activity
            android:name=".activity.bluetooth.BluetoothConnectActivity"
            android:exported="false" />
        <activity
            android:name=".activity.setting.InquiryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.setting.UsageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.setting.TTSSettingActivity"
            android:exported="false" />
        <activity
            android:name=".activity.setting.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".activity.guide.DestinationArriveActivity"
            android:exported="false" />
        <activity
            android:name=".activity.guide.NavigationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.guide.DestinationSelectActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainMenuActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".service.NavigationService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".test.service.TestNavigationService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".test.activity.TestNavigationActivity"
            android:exported="false" />
        <activity
            android:name=".test.activity.TestSelectDestActivity"
            android:exported="false" />
        <activity
            android:name=".test.activity.TestReqDestActivity"
            android:exported="false" />
        <activity
            android:name=".test.activity.TestDirectionActivity"
            android:exported="false" />
        <activity
            android:name=".test.activity.TestLocationActivity"
            android:exported="false" />
        <activity
            android:name=".test.activity.TestMainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>